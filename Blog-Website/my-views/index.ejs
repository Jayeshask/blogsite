<html lang="en">
<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if(blogs.length>0) { %>
        <% blogs.forEach( blog => { %>
            <a class="single" href="/blogs/<%= blog._id %>">
                <h1><%= blog.title %></h1>
                <p><%= blog.snippet %></p>
            </a>
        <% }) %>
        <% } else {%>
            <p>No blogs exist</p>
        <% } %>

    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>